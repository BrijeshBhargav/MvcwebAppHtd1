@model IEnumerable<MVCcoreWebAppHTD1.Models.FileUploadModel>
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upload</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("Upload", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <span>Select File:</span>
            <input type="file" name="PostedFiles" multiple />
        <input type="submit" value="Upload" />
        
    <hr />
       

    <table cellpadding="5" cellspacing="5">
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach (FileUploadModel File in Model)
        {
            <tr>
                    <td>@File.Name</td>
                    <td>@*<a href="@Url.Action("DownloadFile","FileUpload", new { fileId = File.ID })">Download</a>*@
                        <a asp-action="DownloadFile" asp-route-fileId="@File.ID"><i class="text-sucess"><i class="fa fa-download fa-lg btn-sm ;"></i></a>
                      @* <a href="@Url.Action("Delete","FileUpload", new { fileId = File.ID })">Delete</a>*@
                        <a asp-action="Delete" asp-route-fileId="@File.ID"><i class="text-danger"><i class="fa fa-trash fa-lg btn-sm ;"></i></a>
                       </td>
            </tr> 
        }
    </table>
   }
</body>
</html>