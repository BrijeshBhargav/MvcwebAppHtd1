<!-- create table -->
@using(Html.BeginForm())
{
<body>
		<tr>
			<td>@Html.ActionLink("Display Data","Displaycal","student",null)</td>
		<div class="title? align="centre">
			<div class="box">
				<div class="keys">
			<table id="calcu"  >
		<tr>
			
			@ViewBag.data
			<td colspan="12">@Html.TextBoxFor(model=>model.result,new{id="Result"})</td>
			
		</tr>
	
		<tr>
						<td> <input type="submit" class="button gray" value="mrc" onclick='c("Created....................")'></td>
