		        <input type="button" class="button black" value="1" onclick="dis('1')"
						onkeydown="myFunction(event)"> </td>
						
				<td>
					<input type="button" class="button black" value="2" onclick="dis('2')"
						onkeydown="myFunction(event)"> </td>
				<td>
					<input type="button" class="button black" value="3" onclick="dis('3')"
						onkeydown="myFunction(event)"> </td>
