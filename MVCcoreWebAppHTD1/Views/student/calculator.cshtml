					<input type="button" class="button pink" value="-" onclick="dis('-')"
					  onkeydown="myFunction(event)">
				</td>
				
		</tr>
		<tr>
			
				<td>
					<input type="button" class="button black" value="7" onclick="dis('7')"
						onkeydown="myFunction(event)"> </td>
