@using MVCcoreWebAppHTD1.Models
@model OTPModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VERIFY OTP</title>
     <link href="Content/bootstrap.css" rel="stylesheet" />
    <link href="Content/bootstrap.min.css" rel="stylesheet" />
    <script src="Scripts/bootstrap.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
   <section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-6 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
                 @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>

              <p class="text-white-50 mb-5">Please enter your OTP </p>

              <div class="form-outline form-white mb-4">
                  <label>OTP<span class="text-danger">*</span></label>
                  @Html.TextBoxFor(model => model.OTP, new { @class = "form-control", placeholder="Enter OTP" })
                  @Html.ValidationMessageFor(model => model.OTP, "", new { @class = "text-danger" })
              </div>

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>


                                                       
                                          
          }
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
</html>
