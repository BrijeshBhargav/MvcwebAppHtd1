@using MVCcoreWebAppHTD1.Models
@model BookModel
<!DOCTYPE html>

@{
    ViewData["Title"] = "Insert";

}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">



    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>



    <title>Register</title>
</head>
<body>
    <section class="vh-50" style="background-color: #eee;">
        <div class="container h-50">
            <div class="row d-flex justify-content-center align-items-center h-50">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">



                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Books</p>
                                    @using (Html.BeginForm())
                                    {



                                        @Html.AntiForgeryToken()
                                        <div class="mb-3">
                                            <label class="form-label" for="form3Example1c"><b>Title</b></label>
                                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder="Enter Book Tittle" })
                                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                            @*   <label class="form-label" for="form3Example1c">Name</label>*@
                                            @* </div>*@
                                        </div>


                                        @Html.AntiForgeryToken()
                                        <div class="mb-3">
                                            <label class="form-label" for="form3Example1c"><b>AuthorName</b></label>
                                            @Html.TextBoxFor(model => model.Author, new { @class = "form-control", placeholder="Enter Author Name" })
                                            @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                                           
                                        </div>



                                        <div class="mb-3">
                                            <label class="form-label" for="form3Example3c"><b>Description</b></label>
                                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder="Enter Description " })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                          
                                        </div>


                                        <div class="mb-3">
                                            <label class="form-label" for="form3Example3c"><b>PublishedYear</b></label>
                                            @Html.EditorFor(model => model.PublishedYear, new { @class = "form-control", placeholder="Enter PublishedYear " })
                                            @Html.ValidationMessageFor(model => model.PublishedYear, "", new { @class = "text-danger" })
                                            
                                        </div>









                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">



                                            <input type="submit" value="Register" class="btn btn-primary btn-lg">
                                        </div>

                                        <div class="mt-3">
                                            <p class="mb-0  text-center">
                                                @Html.ActionLink("Back to Display","Display","task3")
                                            </p>
                                        </div>




                                    }



                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">



                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </section>
</body>
</html>