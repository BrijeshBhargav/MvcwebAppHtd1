
@{
    ViewData["Title"] = "GetDataonDDL";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

<h3>GetDataonDDL</h3>


@using (Html.BeginForm())
{
    if (ViewData["Val"] == null)
    {
        @Html.DropDownList("test", new SelectList(ViewBag.data, "CustomerID", "CustomerID"), "Please select", new { @id = "ddlFruits" })
        <input type="submit" value="submit" />
    }
    else
    {
       
        <table class="table table-striped">
            <tr>
                <th>OrderiD</th>
                <th>CustomerID</th>
                <th>Emp ID</th>
                <th>Order Date</th>
                <th>Required Date</th>
                <th>Shipped Date</th>

 

            </tr>
            @foreach (var item in ViewData["Val"] as List<MVCcoreWebAppHTD1.Models.OrdersModel>)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.CustomerID</td>
                    <td>@item.EmployeeID</td>
                    <td>@item.OrderDate</td>
                    <td>@item.RequiredDate</td>
                    <td>@item.ShippedDate</td>
                </tr>
            }
        </table>
    }
}