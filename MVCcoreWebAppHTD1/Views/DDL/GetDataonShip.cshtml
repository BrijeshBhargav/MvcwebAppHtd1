
@{
    ViewData["Title"] = "GetDataonShip";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

<h1>GetDataonShip</h1>

@using (Html.BeginForm())
{
    if (ViewData["Val"] == null)
    {
        @Html.DropDownList("test", new SelectList(ViewBag.data, "ShippedDate", "ShippedDate"), "Please select", new { @id = "ddlFruits" })
        <input type="submit" value="submit" />
    }
    else
    {
         @Html.DropDownList("test", new SelectList(ViewBag.data, "ShippedDate", "ShippedDate"), "Please select", new { @id = "ddlFruits" })
        <input type="submit" value="submit" />
       
        <table class="table table-striped">
            <tr>
                <th>OrderiD</th>
                <th>CustomerID</th>
                <th>Emp ID</th>
                <th>Order Date</th>
                <th>Required Date</th>   
                <th>Shipped Date</th>   
                <th>Ship Via </th>   
                <th>Ship Name </th>   
                <th>ShipCity </th>   
                <th>ShipCountry </th>   
               

 

            </tr>
            @foreach (var item in ViewData["Val"] as List<MVCcoreWebAppHTD1.Models.OrdersModel>)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.CustomerID</td>
                    <td>@item.EmployeeID</td>
                    <td>@item.OrderDate</td>
                    <td>@item.RequiredDate</td>
                    <td>@item.ShippedDate</td>
                    <td>@item.ShipVia</td>
                    <td>@item.ShipName</td>
                    <td>@item.ShipCity</td>
                    <td>@item.ShipCountry</td>
                </tr>
            }
        </table>
    }
}